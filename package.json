{
  "name": "onprem-frontend-interview-homework",
  "version": "0.1.0",
  "description": "A basic CRUD service to be used for OnPrem FE Interview tests",
  "main": "index.js",
  "scripts": {
    "local": "npm run compile & node server/local-bootstrap",
    "compile": "webpack --config ./client/config/webpack.config.js",
    "dev": "node server/local-bootstrap & webpack-dev-server --config ./client/config/webpack.dev.js",
    "build": "rm -rf server/dist && babel server/src -d server/dist && cp server/src/db/*.json server/dist/db && npm run compile",
    "prod": "node server/dist"
  },
